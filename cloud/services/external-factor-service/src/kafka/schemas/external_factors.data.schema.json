    "id": { "type": "integer" },
    "customer_id": { "type": "integer" },
    "farm_id": { "type": "integer" },
    "batch_id": { "type": ["string", "null"] },
    "feed_assignment_id": { "type": ["integer", "null"] },
    "weather": { "type": ["object", "null"] },
    "disease_alert": { "type": ["object", "null"] },
    "market_price": { "type": ["object", "null"] },
    "feed_supply": { "type": ["object", "null"] },
    "weather_forecast": { "type": ["object", "null"] },
    "disease_risk_score": { "type": ["number", "null"] },
    "regulatory_changes": { "type": ["string", "null"] },
    "record_date": { "type": "string", "format": "date" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}