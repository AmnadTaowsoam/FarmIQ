{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WaterQualityCreate",
  "description": "Schema สำหรับ validate payload การสร้าง water_quality ใหม่",
  "type": "object",
  "properties": {
    "customer_id": { "type": "integer", "description": "รหัสลูกค้า" },
    "farm_id": { "type": "integer", "description": "รหัสฟาร์ม" },
    "water_source": { "type": "string", "description": "แหล่งน้ำ" },
    "ph": { "type": ["number", "null"], "description": "ค่า pH (optional)" },
    "turbidity": { "type": ["number", "null"], "description": "ค่าความขุ่น (optional)" },
    "measurement_date": { "type": ["string", "null"], "format": "date", "description": "วันที่วัด (optional)" },
    "effective_start": { "type": "string", "format": "date-time", "description": "วัน-เวลาที่เริ่มมีผล (timestamptz)" },
    "effective_end": { "type": ["string", "null"], "format": "date-time", "description": "วัน-เวลาที่สิ้นสุดผล (optional)" }
  },
  "required": ["customer_id", "farm_id", "water_source", "effective_start"],
  "additionalProperties": false
}